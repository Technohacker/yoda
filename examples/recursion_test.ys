# macros are similar to inline functions
{
	# kindof a parameter...
	num $param = 
	
	# halve param (could use bitshift)
	$param $param 2 / =

	# print param
	$param println

	# push value stored in param onto stack 3x
	$param ~ dup dup

	# if param > 1 then call self
	{ $recTest @ } swap 1 > if

# this variable stores the macro
} $recTest =


# run the executable array
2 20 ** $recTest @


